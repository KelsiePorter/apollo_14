<h1>All Astronauts</h1>

<h3>Average Astronaut Age: <%= @average_astronaut_age %></h3>
________________________________
<% @astronauts.each do |astronaut| %>
  <section id=<%= "astronaut-#{astronaut.id}"%>>
    <p><strong>Name: </strong><%= astronaut.name %></p>
    <p><strong>Age: </strong><%= astronaut.age %></p>
    <p><strong>Job: </strong><%= astronaut.job %></p>
    <p><strong>Missions: </strong></p>
      <% astronaut.alpha_missions.each do |mission| %>
        <p><%= mission %></p>
      <% end %>
  --------------------------------------------
<% end %>